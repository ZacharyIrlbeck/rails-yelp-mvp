<div class="container">
  <%= simple_form_for(@restaurant) do |f| %>
  <%= if @restaurant.errors.any? %>
    <div class="errors">
      <ul>
        <% @restaurant.errors.full_message.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category %>
  <%= f.input :rating %>
  <%= f.submit "Submit" %>

</div>

